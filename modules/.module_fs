# File System aliases and functions

# COMMANDS
fs::ll() {
  local LL_STR="ls -la"

  if [[ $(base::check_os linux) = "true" ]]; then
    LL_STR+=" --color=auto --group-directories-first"
  elif [[ $(base::check_os mac) = "true" ]]; then
    LL_STR+="Gf"
  fi

  printf "\n"
  $LL_STR $@
  printf "\n"
}
alias 'll'=fs::ll
alias 'perms'='stat -f "%A %a %N" *'

alias '..'='cd ..'
alias '...'='cd ../..'
alias '....'='cd ../../..'
alias '~'='cd ~'
alias '--'='cd -'
alias 'dl'="cd ~/Downloads"
alias 'dt'="cd ~/Desktop"
alias 'p'="cd ~/Projects"

# COMMAND LIST
fs::list_commands() {
  printf "\n"
  printf "${LIGHTRED}-- COMPLEX ALIAS COMMANDS --${NC}"
  printf "\n"
  printf "\n${LIGHTCYAN} ll        ${NC} : list all files"
  printf "\n${LIGHTCYAN} perms     ${NC} : permissions for file"
  printf "\n${LIGHTCYAN} ..        ${NC} : up one directory"
  printf "\n${LIGHTCYAN} cd        ${NC} : changes directory while looking for python virtualenv and .nvmrc"
  printf "\n"
  printf "\n"
}
alias 'list_commands_fs'=fs::list_commands
