# DIRECTORY SWITCHER
  f_switch-dirs() {
    if [ ! "$1" ]; then
      red-message-space "ERROR: f_switch_dirs directory not specified"
      return;
    fi

    if [ ! "$2" ]; then
      red-message-space "ERROR: f_switch_dirs description not specified"
      return;
    fi

    local FULL_PATH=$(eval echo $1)

    if [[ ! -e $FULL_PATH ]]; then
      red-message-space "ERROR: directory does not exist"
      return;
    fi

    cyan-message-space "-- switching to $2 dir"

    cd $FULL_PATH
  }
  # COMMANDS
    f_cc_ll() {
      local LL_STR="ls -la"

      if [[ $(f_check-os linux) = "true" ]]; then
        LL_STR+=" --color=auto --group-directories-first"
      elif [[ $(f_check-os mac) = "true" ]]; then
        LL_STR+="Gf"
      fi

      printf "\n"
      $LL_STR $@
      printf "\n"
    }
    alias 'll'=f_cc_ll
    alias 'perms'='stat -f "%A %a %N" *'
    alias '...'='cd ..'

  # ADD FUNCTIONALITY TO CHANGE DIRECTORY COMMAND
    cd() {
      builtin cd "$@"

      if [[ ${BASH_MODULES[*]} =~ .*nvm.* ]] && [[ $(nvm version) ]]; then
        f_nvm_check-nvmrc
      fi

      if [[ ${BASH_MODULES[*]} =~ .*python.* ]]; then
        f_env_python_source-py-virtual-env
      fi
    }

