####################
#  CUSTOM ALIASES  #
####################

  # EXPORTS
    export PATH="$PATH:~/Documents/pixel/platform-tools"

  # OPEN .BASH_PROFILE IN SUBLIME
    alias 'st'='"/Applications/Sublime Text.app/Contents/SharedSupport/bin/subl" -n'
    alias 'st-bp'='"/Applications/Sublime Text.app/Contents/SharedSupport/bin/subl" -n -a ~/workspace/_bash/'
    alias 'stbp'='open -a "Sublime Text.app" "/Users/hyunj/.bash_profile"'

  # NON-WORK APPLICATION LAUNCHERS
    alias 'spotify'='open -n "/Applications/Google Chrome.app" --args --app=https://play.spotify.com/?http=1'
    alias 'hypem'='open -n "/Applications/Google Chrome.app" --args --app=https://www.hypem.com/popular'
    alias 'hangouts'='open -n "/Applications/Google Chrome.app" --args --app=http://hangouts.google.com'
    alias 'messenger'='open -n "/Applications/Google Chrome.app" --args --app=http://www.messenger.com'

##########
#  HELP  #
##########

  # COMMAND LIST
    f_lc_jeff() {
      printf "\n"
      printf "${LIGHTRED}-- MY CUSTOM ALIAS COMMANDS --${NC}"
      printf "\n"
        printf "\n${LIGHTCYAN} st            ${NC} : open sublime"
        printf "\n${LIGHTCYAN} st-bp          ${NC} : open .bash_profile in sublime"
      printf "\n"
        printf "\n${LIGHTCYAN} spotify       ${NC} : open spotify in chrome webview"
        printf "\n${LIGHTCYAN} hypem         ${NC} : open hype machine in chrome webview"
        printf "\n${LIGHTCYAN} hangouts      ${NC} : open google hangouts in chrome webview"
        printf "\n${LIGHTCYAN} messenger     ${NC} : open facebook messenger in chrome webview"
      printf "\n"
      printf "\n"
    }
    alias 'lc_jeff'=f_lc_jeff
