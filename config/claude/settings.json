{
  "cleanupPeriodDays": 99999,
  "env": {
    "DISABLE_BUG_COMMAND": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1",
    "DISABLE_TELEMETRY": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash",
      "Edit",
      "MultiEdit",
      "Read",
      "Search",
      "WebSearch",
      "Write",
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(cp:*)",
      "Bash(curl:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(git add:*)",
      "Bash(mise:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git cherry-pick:*)",
      "Bash(git commit:*)",
      "Bash(git merge:*)",
      "Bash(git mv:*)",
      "Bash(git rebase:*)",
      "Bash(git remote:*)",
      "Bash(git rev-parse:*)",
      "Bash(git revert:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(jq:*)",
      "Bash(just:*)",
      "Bash(ln:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(python3:*)",
      "Bash(rm:*)",
      "Bash(sqlite3:*)",
      "Skill(build:*)",
      "Skill(cli:*)",
      "Skill(code:*)",
      "Skill(comment:*)",
      "Skill(emoji:*)",
      "Skill(git:*)",
      "Skill(justfile:*)",
      "Skill(orchestration:*)",
      "Skill(tasks:*)",
      "SlashCommand(/build:*)",
      "SlashCommand(/cli:*)",
      "SlashCommand(/comment:*)",
      "SlashCommand(/emoji:*)",
      "SlashCommand(/git:*)",
      "SlashCommand(/tasks:*)",
      "WebFetch(domain:api.anthropic.com)",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:biomejs.dev)",
      "WebFetch(domain:blog.cloudflare.com)",
      "WebFetch(domain:code.claude.com)",
      "WebFetch(domain:dash.cloudflare.com)",
      "WebFetch(domain:developers.cloudflare.com)",
      "WebFetch(domain:docs.github.com)",
      "WebFetch(domain:formulae.brew.sh)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:orm.drizzle.team)",
      "WebFetch(domain:platform.claude.com)",
      "WebFetch(domain:prettier.io)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:registry.npmjs.org)",
      "WebFetch(domain:stackoverflow.com)",
      "WebFetch(domain:tanstack.com)",
      "WebFetch(domain:vite.dev)",
      "WebFetch(domain:www.npmjs.com)",
      "WebFetch(domain:www.prisma.io)",
      "mcp__plugin_context7_context7__*",
      "mcp__context7__get-library-docs",
      "mcp__context7__resolve-library-id",
      "WebFetch(domain:avalon.onl)",
      "WebFetch(domain:domains.cloudflare.com)",
      "Bash(${CLAUDE_PLUGIN_ROOT}/scripts/rebase:*)"
    ],
    "deny": [
      "Bash(git add --all:*)",
      "Bash(git add --force:*)",
      "Bash(git add -A:*)",
      "Bash(git add -f:*)",
      "Bash(git commit -a:*)",
      "Bash(git push:*)",
      "Bash(git reset --hard:*)",
      "Bash(git worktree remove --force:*)",
      "Bash(npm i --global:*)",
      "Bash(npm i -g:*)",
      "Bash(npm install --global:*)",
      "Bash(npm install -g:*)",
      "Bash(npm run dev:*)",
      "Bash(npm run serve:*)",
      "Bash(npm run start &)",
      "Bash(npm run start:*)",
      "Bash(op)",
      "Bash(op:*)",
      "Bash(open:*)",
      "Bash(rm -rf:*)",
      "Bash(rm -fr:*)",
      "Bash(rm -r -f:*)",
      "Bash(rm -f -r:*)"
    ],
    "ask": [
      "Edit(CLAUDE.md)",
      "Edit(~/.claude/settings.json)",
      "MultiEdit(CLAUDE.md)",
      "MultiEdit(~/.claude/settings.json)",
      "Write(CLAUDE.md)"
    ],
    "defaultMode": "acceptEdits"
  },
  "model": "opus",
  "enabledMcpjsonServers": [
    "brave-search"
  ],
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline-command.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "agent-sdk-dev@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "explanatory-output-style@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "github@claude-plugins-official": true,
    "hookify@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": true,
    "build@fisenko-claude-code-plugins": true,
    "cli@fisenko-claude-code-plugins": true,
    "code@fisenko-claude-code-plugins": true,
    "comment@fisenko-claude-code-plugins": true,
    "emoji@fisenko-claude-code-plugins": true,
    "git@fisenko-claude-code-plugins": true,
    "justfile@fisenko-claude-code-plugins": true,
    "orchestration@fisenko-claude-code-plugins": true,
    "tasks@fisenko-claude-code-plugins": true,
    "markdown-tasks@fisenko-claude-code-plugins": true
  },
  "sandbox": {
    "enabled": false,
    "autoAllowBashIfSandboxed": true
  },
  "spinnerTipsEnabled": false,
  "alwaysThinkingEnabled": true
}
